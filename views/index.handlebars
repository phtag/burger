<div class="container" id="burger-container">
  <h1 class="burger-headers">Eat Da Burger!</h1>
  <div class="row">
    <div class="col">
      <h2 class="burger-headers">Burgers to eat</h2>
      <ul id="burgers-to-eat-list">
        {{#each burgers}}
          {{#unless devoured}}
            <li>{{this.burger_name}}<button id= "{{this.id}}" class="burgers-to-eat-button" style="margin-right: 20px; float: right">eaten</button></li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2 class="burger-headers">Eaten burgers</h2>
      <ul id="burgers-eaten-list">
        {{#each burgers}}
          {{#if devoured}}
            <li>{{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <div class="burger-entry">
    <h2 class="burger-headers">Add the name of a burger you'd to eat</h2>
      <form class="burger-submit-form">
        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>
        <button id="add-burger-button" type="submit">Add the burger</button>
      </form>
  </div>
</div>
